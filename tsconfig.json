{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "types": ["node", "playwright"],
    "paths": {
      "@playwright.config": ["./playwright.config"],
      "@pages/*": ["./src/pages/*"],
      "@base/*": ["./src/base/*"],
      "@test-data/*": ["./src/test-data/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
